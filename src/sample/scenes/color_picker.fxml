<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Button?>
<fx:root type="javafx.scene.layout.Pane" xmlns:fx="http://javafx.com/fxml">
    <ColorPicker fx:id="picker"></ColorPicker>
    <Button fx:id="submit" onAction="#changeColor"></Button>
    <ImageView id="yellowbird-downflap.png" fx:id="bird">
        <image>
            <Image url="@../assets/yellowbird-downflap.png" />
        </image>
    </ImageView>
    <Button fx:id="save" text="Save" layoutX="77" layoutY="330" prefWidth="100" onAction="#saveBird"></Button>
</fx:root>